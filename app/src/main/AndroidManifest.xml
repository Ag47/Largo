<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shapio.largo">

    <application
        android:allowBackup="true"
        android:icon="@drawable/send_mail"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SelectPaperThemeActivity"
            android:label="Select paper material" />
        <activity
            android:name=".activity.WriteMessageContentActivity"
            android:label="write your message"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.SentMailActivity"
            android:label="Sent Mail" />
        <activity
            android:name=".activity.PeekActivity"
            android:label="Peek Mail" />
        <activity
            android:name=".activity.ReadMessageContentActivity"
            android:label="Read Mail" />
    </application>

</manifest>