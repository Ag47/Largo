<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clickable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/paper_thumb_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/general_theme" />


    <TextView
        android:id="@+id/paper_name"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20dp"
        android:layout_alignTop="@+id/paper_thumb_icon"
        android:layout_toEndOf="@+id/paper_thumb_icon"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/paper_desc"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="desc"
        android:textSize="20dp"
        android:layout_below="@+id/paper_name"
        android:layout_alignStart="@+id/paper_name" />
</RelativeLayout>